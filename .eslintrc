{
    "extends": "airbnb-base",

    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },

    "globals": {
        "describe": false,
        "it": false,
        "before": false,
        "beforeEach": false,
        "after": false
    },

    "rules": {
        "no-console": "off",
        "max-len": ["error", 120],
        "padded-blocks": "off",
        "no-use-before-define": ["error", "nofunc"],
        "comma-dangle": ["error", "never"],
        "complexity": ["error", 10],
        "max-params": ["error", 3],
        "max-statements": ["error", 15],
        "indent": ["error", 4],
        "no-plusplus": "off",
        "linebreak-style": "off",
        "import/no-extraneous-dependencies": ["error", {"devDependencies": true, "optionalDependencies": false, "peerDependencies": true}]
    }
}